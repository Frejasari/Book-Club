<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="horizontal"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <de.frejasundalexchat.dritterchat.view.RoundedCornersImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/bookCoverInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="book cover"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bookTitle"
            tools:text="title"
            android:layout_weight="2"
            app:layout_constraintStart_toEndOf="@+id/bookCoverInput"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/bookCoverInput"
            app:layout_constraintTop_toTopOf="@+id/bookCoverInput"
            app:layout_constraintEnd_toEndOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>